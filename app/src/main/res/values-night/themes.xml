<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Woil" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/iransans</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="tint">#FFFFFF</item>
    </style>

    <style name="backNight">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="frontLight">
        <item name="android:textColor">@color/dark_white</item>
    </style>

    <style name="favLogo">
        <item name="tint">@color/dark_gray</item>
    </style>

    <style name="miniIcons">
        <item name="drawableTint">@color/dark_gray</item>
    </style>

    <style name="introBack">
        <item name="android:background">@color/splash_dark</item>
    </style>

    <style name="backTrans">
        <item name="android:background">@color/dark_90</item>
    </style>

</resources>