<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Woil" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/iransans</item>
    </style>

    <style name="backNight">
        <item name="android:background">@color/white</item>
    </style>

    <style name="frontLight">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="favLogo">
        <item name="tint">@color/white</item>
    </style>

    <style name="miniIcons">
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="font_normal">
        <item name="android:fontFamily">@font/iransans_medium</item>
    </style>

    <style name="font_bold">
        <item name="android:fontFamily">@font/iransans_bold</item>
    </style>

    <style name="font_extrabold">
        <item name="android:fontFamily">@font/iransans_black</item>
    </style>

    <style name="introBack">
        <item name="android:background">@color/splash_light</item>
    </style>

    <style name="backTrans">
        <item name="android:background">@color/light_90</item>
    </style>


</resources>