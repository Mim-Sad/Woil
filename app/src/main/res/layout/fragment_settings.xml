<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/backTrans"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/exit_from_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_icons8_settings"
        app:tint="@color/teal_700" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/frontLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:paddingEnd="0dp"
                android:text="@string/set_sound_status"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/sound_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="0dp"
                android:gravity="center_horizontal"
                app:srcCompat="@drawable/ic_round_music_note"
                app:tint="@color/purple_500" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/frontLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:paddingEnd="5dp"
                android:text="@string/set_theme_status"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/auto_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                app:srcCompat="@drawable/ic_round_brightness_auto"
                app:tint="@color/purple_500" />

            <ImageView
                android:id="@+id/light_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                app:srcCompat="@drawable/ic_round_wb_sunny"
                app:tint="@color/purple_500" />

            <ImageView
                android:id="@+id/dark_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                app:srcCompat="@drawable/ic_round_dark_mode"
                app:tint="@color/purple_500" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/frontLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/set_language_status"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/fa_lang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/fa" />

            <ImageView
                android:id="@+id/en_lang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/en" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dark_mode_easter_egg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:background="@color/black"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">
        <TextView
            style="@style/frontLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotationX="-180"
            android:text="@string/dark_mode_force"
            android:textColor="@color/semi_black"
            android:textSize="20sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_icons8_neutral"
            app:tint="@color/semi_black"
            android:rotationX="-180"
            android:layout_margin="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>